{
    "exclude": [
        "(^legacy/)",
        "(\\.project$)",
        "(\\.phutil_module_cache$)"
    ],
    "linters": {
        "chmod": {
            "type": "chmod"
        },
        "filename": {
            "type": "filename"
        },
        "foodcritic": {
            "type": "foodcritic",
            "exclude": [
                "(^test/)",
                "(^\\.arcconfig$)",
                "(^\\.arclint$)"
            ]
        },
        "generated": {
            "type": "generated"
        },
        "json": {
            "type": "json",
            "include": [
                "(^\\.arcconfig$)",
                "(^\\.arclint$)",
                "(\\.json$)"
            ]
        },
        "ruby": {
            "type": "ruby",
            "include": "(\\.rb$)"
        },
        "spelling": {
            "type": "spelling"
        },
        "text": {
            "type": "text",
            "severity": {
                "3": "disabled"
            }
        }
    }
}
